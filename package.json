{
  "name": "stock-trading-mern-app",
  "version": "1.0.0",
  "description": "Stock Trading Simulator - MERN Stack Application",
  "scripts": {
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "start-server": "cd server && npm start",
    "start-client": "cd client && npm start",
    "dev": "concurrently \"npm run start-server\" \"npm run start-client\"",
    "build-client": "cd client && npm run build",
    "vercel-build": "npm run install-client && npm run build-client",
    "render-build": "cd server && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["stock", "trading", "mern", "react", "nodejs", "mongodb"],
  "author": "Naresh Naik",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}